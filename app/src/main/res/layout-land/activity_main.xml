<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:background="@color/colorPrimaryDark"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		tools:context="com.blogspot.onekeyucd.healthtracker.MainActivity">

	<RelativeLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@color/IndianRed"
			android:layout_margin="3dp">

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="@string/player1_name"
				android:id="@+id/player1_name"
				android:layout_alignParentTop="true"
				android:layout_centerHorizontal="true"
				android:padding="12dp"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:backgroundTint="@color/BlanchedAlmond"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="@string/minus"
				android:id="@+id/player1_minusButton"
				android:onClick="player1_minus"
				android:layout_centerVertical="true"
				android:layout_alignParentStart="true"/>

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="@string/player1_health"
				android:id="@+id/player1_health"
				android:layout_centerVertical="true"
				android:layout_centerHorizontal="true"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:backgroundTint="@color/BlanchedAlmond"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="@string/plus"
				android:id="@+id/player1_plusButton"
				android:onClick="player1_plus"
				android:layout_centerVertical="true"
				android:layout_alignParentEnd="true"/>
	</RelativeLayout>

	<RelativeLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@color/SkyBlue"
			android:layout_margin="3dp">

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="@string/player2_name"
				android:id="@+id/player2_name"
				android:layout_alignParentTop="true"
				android:layout_centerHorizontal="true"
				android:padding="12dp"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:backgroundTint="@color/BlanchedAlmond"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="@string/minus"
				android:id="@+id/player2_minusButton"
				android:onClick="player2_minus"
				android:layout_centerVertical="true"
				android:layout_alignParentStart="true"/>

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="@string/player2_health"
				android:id="@+id/player2_health"
				android:layout_centerVertical="true"
				android:layout_centerHorizontal="true"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:backgroundTint="@color/BlanchedAlmond"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="@string/plus"
				android:id="@+id/player2_plusButton"
				android:onClick="player2_plus"
				android:layout_centerVertical="true"
				android:layout_alignParentEnd="true"/>
	</RelativeLayout>

</LinearLayout>
