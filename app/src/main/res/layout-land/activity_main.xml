<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/colorPrimaryDark"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		tools:context="com.blogspot.onekeyucd.healthtracker.MainActivity">

	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/game_reset"
			android:id="@+id/gameReset_button"
			android:layout_alignParentTop="true"
			android:backgroundTint="@color/BlanchedAlmond"
			android:onClick="resetGame"
			android:layout_centerHorizontal="true"/>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:layout_below="@id/gameReset_button"
			android:background="@color/colorPrimaryDark"
			android:baselineAligned="false">

		<fragment
				android:name="com.blogspot.onekeyucd.healthtracker.PlayerFragment"
				android:id="@+id/player1_fragment"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="4"
				android:layout_margin="3dp"
				tools:layout="@layout/fragment_player"/>

		<fragment
				android:name="com.blogspot.onekeyucd.healthtracker.PlayerFragment"
				android:id="@+id/player2_fragment"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="4"
				android:layout_margin="3dp"
				tools:layout="@layout/fragment_player"/>

	</LinearLayout>

</RelativeLayout>
